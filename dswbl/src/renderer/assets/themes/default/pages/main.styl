#main {
  width: 100%;
  height: 100%;
  border: 2px solid #3366FF;
  background-color: #FFF;
  -webkit-user-select: none;
  .main-top {
    position: relative;
    width: 100%;
    height: 230px;
    background-color: #3366FF;
    -webkit-app-region: drag;
    .main-top-operation-wrapper {
      .main-top-title {
        position: absolute;
        top: 6px;
        left: 16px;
        color: #fff;
        font: normal 28px 'Microsoft Yahei';
        vertical-align: bottom;
        &:before {
          content: '';
          display: inline-block;
          width: 40px;
          height: 30px;
          vertical-align: middle;
          margin-right: 4px;
          background: url('../../images/dsw-logo.png') no-repeat scroll 0 0/ 100% 100%;
        }
      }
      .main-top-operation {
        color: #fff;
        text-align: right;
        padding-right: 20px;
        .main-btn-common {
          cursor: pointer;
          -webkit-app-region: no-drag;
        }
        .main-minimize
        .main-close {
          display: inline-block;
          padding: 10px;
          cursor: pointer;
          &:hover {
            background-color: red;
          }
        }
      }
    }
    .main-top-info-wrapper {
      font-size: 13px;
      color: #FFF;
      padding: 31px 0 0 75px;
      overflow: hidden;
      .main-user-info {
        float: left;
        width: 61%;
        border-left: 1px dashed #FFF;
        padding: 9px 10px;
        -webkit-app-region: no-drag;
        .main-user-info-common {
          vertical-align: middle;
          margin-bottom: 16px;
          &:last-child {
            margin-bottom: 0;
          }
          .main-user-info-icon {
            display: inline-block;
            width: 15px;
            height: @width;
            vertical-align: middle;
            margin-right: 3px;
          }
          .main-user-info-text-common {
            vertical-align: middle;
          }
        }
      }
      .main-news-info {
        float: left;
        width: 35%;
        border-left: 1px dashed #FFF;
        padding: 0 10px;
        -webkit-app-region: no-drag;
        .main-news-content-common {
          margin-bottom: 7px;
          &:last-child {
            margin-bottom: 0;
          }
        }
        .main-news-info-annunciate {
          position: relative;
          overflow: hidden;
          .main-news-info-inform {
            margin-right: 230px;
            .main-news-info-inform-icon {
              width: 15px;
              height: @width;
              vertical-align: top;
              margin-right: 4px;
            }
            .main-news-info-inform-text {
              vertical-align: middle;
            }
          }
          .main-news-info-more {
            position: absolute;
            top: 0;
            right: 0;
          }
        }
        .main-news-content {
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
        }
      }
    }
  }
  .main-bottom {
    .search-wrapper {
      text-align: center;
      padding-top: 14px;
      .search-radio {
        display: inline-block;
        margin-right: 10px;
        .search-radio-frame {
          display: inline-block;
          .radio-label {
            cursor: pointer;
            font-size: 16px;
            color: #3366FF;
            vertical-align: middle;
          }
          .radio-input {
            display: inline-block;
            width: 14px;
            height: @width;
            vertical-align: top;
            cursor: pointer;
          }
        }
      }
      .text-input {
        width: 260px;
        height: 24px;
        vertical-align: middle;
        margin-right: 20px;
      }
      .search-button {
        font-size: 12px;
        color: #FFF;
        background-color: #3366FF;
        border-radius: 3px;
        vertical-align: middle;
        padding: 6px 20px;
      }
    }
    .main-function-wrapper {
      padding-top: 88px;
      .function-frame {
        text-align: center;
        .function-item {
          position: relative;
          display: inline-block;
          border: 1px solid transparent;
          border-radius: 5px;
          cursor: pointer;
          padding: 10px 10px 20px;
          margin-right: 30px;
          &:hover {
            border-color: #CCC;
          }
          &:last-child {
            margin-right: 0;
          }
          .function-item-icon {
            width: 90px;
            height: @width;
            margin-bottom: 4px;
             .function-item-icon-img {
               display: block;
               width: 100%;
               height: 100%;
             }
          }
        }
      }
    }
    .rests-function-wrapper {
      overflow: hidden;
      padding-top: 50px;
      .left-function-wrapper {
        float: left;
        padding-left: 40px;
        .function-frame {
          .function-item {
            position: relative;
            display: inline-block;
            border-radius: 5px;
            cursor: pointer;
            padding: 10px 15px;
            &:hover {

            }
            &:last-child {
              margin-right: 0;
            }
            .function-item-icon {
              width: 50px;
              height: @width;
              margin-bottom: 4px;
              .function-item-icon-img {
                display: block;
                width: 100%;
                height: 100%;
              }
            }
            .function-item-text {
              font-size: 12px;
            }
          }
        }
      }
      .right-function-wrapper {
        float: right;
        padding-top: 24px;
        padding-right: 40px;
        .function-frame {
          .function-item {
            position: relative;
            display: inline-block;
            text-align: center;
            border-radius: 5px;
            cursor: pointer;
            padding: 10px 8px;
            &:hover {

            }
            &:last-child {
              margin-right: 0;
            }
            .function-item-icon {
              display: inline-block;
              width: 38px;
              height: @width;
              margin-bottom: 4px;
              .function-item-icon-img {
                display: block;
                width: 100%;
                height: 100%;
              }
            }
            .function-item-text {
              display: block;
              font-size: 12px;
            }
          }
        }
      }
    }
    .main-copy-corporation-wrapper {
      position: absolute;
      left: 50%;
      bottom: 2%;
      transform: translateX(-50%);
      width: 100%;
      text-align: center;
      font-size: 12px;
      color: #666;
      .main-copy-corporation-text {

      }
    }
    .main-version {
      position: absolute;
      bottom: 1%;
      left: 1%;
      font-size: 14px;
    }
  }
}
