#template-editor {
  width: 100%;
  height: 100%;
  -webkit-user-select: none;
  .template-editor-top {
    position: relative;
    width: 100%;
    height: 28px;
    line-height: 28px;
    background-color: #0099CC;
    -webkit-app-region: drag
    .template-editor-top-title {
      color: #FFF;
      font-size: 14px;
      padding-left: 10px;
    }
    .template-editor-top-close {
      position: absolute;
      top: 50%;
      right: 10px;
      transform: translateY(-50%);
      padding: 0 10px;
      cursor: pointer;
      -webkit-app-region: no-drag
      &:hover {
        background-color: red;
      }
    }
  }
  .template-editor-search {
    .searchForm {
      .el-form-item {
        .el-form-item__label {
          color: #000;
          font-weight: 700;
          font-size: 14px;
        }
      }
      .el-input--small, .el-input--small {
        .el-input__inner {
          width: 210px;
          height: 22px !important;
          line-height: 22px !important;
          color: #000;
          border-radius: 0;
          border-color: #DDD;
        }
      }
    }
  }
  .template-editor-bottom {
    .template-editor-bottom-title-wrapper {
      float: left;
      width: 9%;
      .template-editor-bottom-title {
        color: #000;
        font-size: 14px;
        font-weight: 700;
        padding: 8px;
      }
    }
    .template-editor-bottom-content-wrapper {
      float: left;
      width: 91%;
      .template-editor-bottom-button-wrapper {
        text-align: center;
        .template-editor-bottom-button-common {
          color: #FFF;
          background-color: #0066FF;
          padding: 6px 20px;;
          border-radius: 2px;
          margin-top: 6px;
        }
      }
    }
  }
}
