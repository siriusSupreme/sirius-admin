#templateManage {
  position: relative;
  width: 100%;
  height: 100%;
  border: 2px solid #3366FF;
  background-color: #FFF;
  -webkit-user-select: none;
  .templateManage-top {
    width: 100%;
    height: 40px;
    background-color: #3366FF;
    -webkit-app-region: drag;
    overflow: hidden;
    .templateManage-top-title-wrapper {
      float: left;
      height: 100%;
      .templateManage-top-back {
        position: relative;
        display: inline-block;
        width: 74px;
        height: 100%;
        text-align: center;
        line-height: 40px;
        background-color: #336699;
        cursor: pointer;
        -webkit-app-region: no-drag;
        vertical-align: middle;
        &:hover {
          background-color: #3366CC;
        }
        .templateManage-top-back-pic {
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          width: 52%;
          height: 60%;
        }
      }
      .templateMnage-top-title {
        font-weight: 700;
        font-family: 'Microsoft Yahei';
        color: #FFF;
        vertical-align: middle;
      }
    }
    .templateManage-top-operation-wrapper {
      float: right;
      padding-top: 4px;
      .templateMnage-top-unit {
        display: inline-block;
        color: #fff;
        margin-right: 40px;
      }
      .templateMnage-top-operation {
        display: inline-block;
        color: #fff;
        text-align: right;
        padding-right: 10px;
        .templateMnage-top-operation-btn-common {
          display: inline-block;
          width: 17px;
          height: 17px;
          cursor: pointer;
          vertical-align: middle;
          margin-right: 4px;
          -webkit-app-region: no-drag;
          img {
            display: block;
            width: 100%;
            height: 100%;
          }
        }
        .templateMnage-top-operation-minimize
        .templateMnage-top-operation-close {
          display: inline-block;
          padding: 5px 10px;
          cursor: pointer;
          vertical-align: top;
          -webkit-app-region: no-drag;
          img {
            vertical-align: top;
            margin-top: 7px;
          }
          &:hover {
            background-color: red;
          }
        }
      }
    }
  }
  .templateManage-center {
    width: 100%;
    height: calc(100% - 66px);
    padding: 7px 0 0 4px;
    overflow: hidden;
    .templateManage-center-aside {
      float: left;
      width: 16%;
      height: 100%;
      text-align: center;
      border: 1px solid #CCC;
      padding: 7px 5px 0 2px;
      .templateManage-center-aside-frame {
        .templateManage-center-aside-item {
          font-family: 'Microsoft Yahei';
          background-color: rgba(0, 153, 255, .3)
          padding: 8px 0;
          margin-bottom: 1px;
          cursor: pointer;
          &:last-child {
            margin-bottom: 0;
          }
          &.aside-active {
            background-color: #0099FF;
          }
          .templateManage-center-aside-item-title {
            &.aside-item-title-active {
              .templateManage-center-aside-item-title-img {
                vertical-align: middle;
              }
              &:after {
                border-right-color: red;
              }
            }
            .templateManage-center-aside-item-title-img {
              vertical-align: middle;
            }
            span {
              vertical-align: middle;
            }
            &:after {
              content: '';
              display: inline-block;
              width: 0;
              height: 0;
              border-right: 8px solid transparent;
              border-left: 4px solid transparent;
              border-top: 5px solid transparent;
              border-bottom: 5px solid transparent;
              vertical-align: middle;
            }
          }
        }
      }
    }
    .templateManage-center-article {
      float: right;
      width: 84%;
      height: 100%;
      border: 1px solid #CCC;
      padding: 0 2px;
    }
  }
  .templateManage-bottom {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 26px;
    text-align: center;
    line-height: 26px;
    font-size: 14px;
    font-weight: 700;
    font: 700 15px 'Microsoft Yahei'
    color: #FFF;
    background-color: #3366FF;
    .templateManage-bottom-copy-corporation-text {
      line-height: 26px;
    }
  }
}
